#!/bin/sh

if [ -n "$SSH_CONNECTION" ]; then
	echo "Dude, du bist in einer SSH-Session. Wie soll ich das Tastaturlayout hier ändern?"
	exit 1
fi
if [ -z "$DISPLAY" ]; then
	echo "Dude, du bist auf der Textkonsole. Ich kann das Layout nur auf dem X-Server ändern!"
	exit 1
fi

xset -r 51
xset -r 94
setxkbmap de neo
